# Stage 1: Builder
FROM node:20.6-alpine AS builder
WORKDIR /app

# Install dependencies
COPY package*..json ./
COPY tsconfig.json .
RUN npm ci

# Copy source files
COPY src ./src

# Build TypeScript
RUN npm run build  # This should output to ./dist

# Stage 2: Runtime
FROM node:20.6-alpine
WORKDIR /app

# Copy compiled JS and dependencies
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/dist ./dist

# Use compiled server.js
CMD ["node", "dist/server.js"]  # Keep .js extension here